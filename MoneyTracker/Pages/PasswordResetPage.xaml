<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoneyTracker.Pages.PasswordResetPage"
             Title="Password reset"
             xmlns:viewmodel="clr-namespace:MoneyTracker.ViewModels"
             xmlns:DataType="viewmodel:UserViewModel">

    <Grid RowDefinitions="100, Auto, Auto, Auto"
          ColumnDefinitions=".25*,.50*,.25*"
          Padding="10"
          RowSpacing="10"
          ColumnSpacing="10"
          HorizontalOptions="CenterAndExpand">
        
        <Button Text="Change Password"
        Grid.Column="3"
        Command="{Binding ChangeVisablityCommand}"/>
    </Grid>
    
</ContentPage>