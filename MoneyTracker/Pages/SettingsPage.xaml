<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoneyTracker.Pages.SettingsPage"
             xmlns:viewmodel="clr-namespace:MoneyTracker.ViewModels"
             xmlns:DataType="viewmodel:SettingsViewModel"
             Title="Settings">
    <Grid RowDefinitions="Auto,Auto,Auto,Auto"
          ColumnDefinitions=".2*,.35*,Auto,*"
          RowSpacing="10">
        <Frame Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Padding="10" CornerRadius="10">
            <StackLayout Orientation="Horizontal">
                <Label Text="Currency" Grid.Column="1"/>
                <Entry IsReadOnly="True" Text="{Binding Currency}" Grid.Column="2"/>
            </StackLayout>
        </Frame>
    </Grid>
</ContentPage>